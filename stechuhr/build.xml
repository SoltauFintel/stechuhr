<project name="stechuhr" basedir="." default="eclipse">

	<target name="build">
		<gradle task="check fatJar"/>
	</target>
	<target name="eclipse">
		<gradle task="eclipse"/>
	</target>
	<target name="clean">
		<gradle task="clean"/>
	</target>
	<target name="compile">
		<gradle task="compileJava compileTestJava"/>
	</target>
	<target name="test">
		<gradle task="check"/>
	</target>

	<macrodef name="gradle">
		<attribute name="task"/>
		<sequential>
	        <exec executable="cmd" failonerror="true">
	        	<arg line="/c gradlew.bat @{task}"/>
	        </exec>
		</sequential>
	</macrodef>
	
</project>
